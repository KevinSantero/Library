@model IEnumerable<Library.Data.Models.Editorial>
@{
    ViewData["Title"] = "Index";
}

<h3>Lista de Editoriales</h3>

<p>
    <a asp-action="Create" class="btn btn-info"> <i class="fa fa-plus-square" aria-hidden="true"></i> Crear nuevo</a>
</p>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <div class="float-right">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Editar</a> |
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id"> <i class="fa fa-search-plus" aria-hidden="true"></i>Detalle</a> |
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" ><i class="fa fa-trash-o" aria-hidden="true"></i> Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
