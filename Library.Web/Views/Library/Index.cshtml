@model IEnumerable<Library.Data.Models.Library>

@{
    ViewData["Title"] = "Index";
}

<h3>Lista de Libros</h3>

<p>
    <a asp-action="Create" class="btn btn-info"> <i class="fa fa-plus-square" aria-hidden="true"></i> Crear</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreciosSugerido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editorial)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Costo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreciosSugerido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editorial.Nombre)
            </td>
            <td>
                <div class="float-right">
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Editar
                    </a> |
                    <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id"> <i class="fa fa-search-plus" aria-hidden="true"></i>Detalle</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa fa-trash-o" aria-hidden="true"></i> Eliminar</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
